{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "pretty": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "../low-code-fe/packages/nasl/sandbox/stdlib/components",
        "emitDeclarationOnly": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": ["nasl"],
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "./pc-ui/src/components/u-button.vue/api.ts"
    ]
}